# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

#polkit init

exec_always ~/.config/sway/import-gsettings
# exec_always "eww open example"
exec_always /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 
exec_always /usr/lib/xdg-desktop-portal -r & /usr/lib/xdg-desktop-portal-wlr
exec_always wl-paste -t text --watch clipman store
exec_always mako

# xwayland enable

set $mod Mod4
set $mod2 Mod1
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
set $screenshot grim
# Your preferred terminal emulator
set $term kitty
set $term2 alacritty
set $browser firefox-nightly
set $music_player "LD_PRELOAD=/usr/lib/spotify-adblock.so spotify"
set $file_manager "nemo"
set $guieditor ~/.other/git-stuff/neovide/target/release/neovide --srgb

# for_window [app_id="firefox-nightly"] opacity 0.9


input "type:keyboard" {
    xkb_layout dvp,dvorak,us
	# xkb_layout us 
	# xkb_variant dvorak-l
    xkb_options caps:swapescape,grp:alt_shift_toggle

    xkb_numlock enable
    repeat_delay 150
    repeat_rate 30
}
input "type:pointer" {
	accel_profile "flat"
	# pointer_accel 0
}

default_border pixel 1
smart_borders on
smart_gaps on
hide_edge_borders smart
gaps inner 4
gaps outer 2
bindsym $mod+tab focus next
bindsym $mod+Shift+tab focus prev
bindsym $mod+shift+a exec ydotool type 'I USE ARCH BTW'
# gaps inner 24
# gaps outer -8

